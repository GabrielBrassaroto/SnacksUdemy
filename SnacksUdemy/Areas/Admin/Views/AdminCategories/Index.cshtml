@model ReflectionIT.Mvc.Paging.PagingList<SnacksUdemy.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Request</h1>

<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="Filter" 
    value="@Model.RouteValue["Filter"]"/>
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-seach" arial-hidden="true"></span>
        Seach
    </button>
</form>

Total Requests : @Model.TotalRecordCount

<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripton)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripton)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
