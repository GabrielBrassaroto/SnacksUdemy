@model IEnumerable<SnacksUdemy.Models.Request>

<h2>Requests Period</h2>

<nav class="navbar navbar-dark">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">

                <label for="minDate">Date Initial</label>
                <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
            </div>
            <div class="form-group">

                <label for="minDate">Date End</label>
                <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
            </div>
            <button type="submit" class=" btn btn-sucess">Filter</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"> Total Requests = @Model.Count()</h3>
        <h3 class="panel-title">Total Snacks Requests = @Model.Sum(obj => obj.OrderTotalItens)</h3>
        <h3 class="panel-title"> Total Price Requets = Model.Sum(obj => obj.OrderTotal)</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.RequestId)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderTotal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderTotalItens)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Adress)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequestId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderTotal)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderTotalItens)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Adress)
                        </td>
       




                    </tr>

                }
            </tbody>
        </table>
    </div>

</div>