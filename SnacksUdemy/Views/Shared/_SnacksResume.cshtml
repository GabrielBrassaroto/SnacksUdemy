@model Snack


<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImageUrl.ToString()" class="img-fluid"></p>
    <h3>Price : @Model.Price.ToString("c")</h3>
    <h4>
        <a asp-controller="Snack" asp-action="Details" asp-route-snackId="@Model.SnackId">
            @Model.Name
        </a>
    </h4>
    <p> @Model.ShortDescripton </p>
    <div>
        <p class="button">
            <a class="btn-primary" id="cartButton" asp-controller="ShoppingCart"
               asp-action="AddItemInShoppingCart" asp-route-SnackId="@Model.SnackId">
                Add Shopping Cart
            </a>
        </p>
    </div>
</div>