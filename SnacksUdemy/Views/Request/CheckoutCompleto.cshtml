@model Request

<div class="container">

    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompleteMessage</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Client: <strong>@Model.Name</strong></p>
            <p>Date Request: <strong>@Model.DateRequest</strong></p>
            <p>Number Request: <strong>@Model.RequestId</strong></p>

        </div>

    </div>
    <table class="table">

    <tr>
        <th></th>
        <th>Quantity</th>
        <th>Snack</th>
        <th>Price</th>
    </tr>

    @foreach (var item in Model.RequestItens)
    {
        <tr>
            <td><img src="@item.Snack.ImageUrl"></img></td>
            <td>@item.Lenght</td>
            <td>@item.Snack.Name</td>
            <td>@item.Snack.Price</td>
        </tr>
    }
    
    </table>
  <h4>Total Price Request: <strong>@(((decimal)ViewBag.TotalRequest).ToString("C2"))</strong</h4>
  <div  class="form-group" style="text-align:center">

      <h3>
          <a class="nav-link text-info" asp-controller="Home" asp-action="Index"k>Back</a>
      </h3>
  </div>

</div>