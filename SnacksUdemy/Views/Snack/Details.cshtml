@model Snack

<div class="container">
    <div class="row">
        <div class="card">
            <div class="text-center">
                <img src="@Model.ImageUrl" class="img-fluid" alt="">
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.ShortDescripton</p>
                <p class=" btn btn-group align-content-lg-end">
                <a  asp-controller="Snack" asp-action="List"
                class="btn btn-outline-info"> All Snack</a>
                <a class=" btn btn-primary" id="cartButton" asp-controller="ShoppingCart" 
                asp-action="AddItemInShoppingCart" asp-route-snackId="@Model.SnackId">
                Add @Model.Name Cart
            </a>
            </p>
            </div>
        </div>
    </div>
</div>